---
 const {cardLink, cardText, textAlt, cardColor} = Astro.props;
---
<style>
    .card{
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 10px;
        border-style: solid;
        border-radius: 12px;
        border-top-width: 1px;
        border-left-width: 1px;
        border-right-width: 7px;
        border-bottom-width: 7px;
        font-size: 1.2rem;
        margin: 15px 0 20px 0;
    }

    .card__container{
        text-align: center;
     
    }

    .card__container img{
        width: 250px;
        max-height: 273px;
    }

    .card__text{
        padding: 5px;
    }

    @media screen and (min-width:768px){
        .card{
            display: flex;
        }
    }
</style>

<div class="card" style={{borderColor: cardColor}}>
    <div class="card__container">
        <img src={cardLink} alt={textAlt}>
    </div>
    <p class="card__text">{cardText}</p>
</div>

